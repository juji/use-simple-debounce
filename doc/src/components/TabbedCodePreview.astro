<div class="tabbed-code-preview">
  <div class="tabs">
    {tabs.map((tab, index) => (
      <button
        class={`tab ${index === 0 ? 'active' : ''}`}
        data-tab={index}
        id={`tab-btn-${index}`}
      >
        <span class="tab-icon" set:html={icons[tab.icon as keyof typeof icons]}></span>
        <span class="tab-name">{tab.name}</span>
      </button>
    ))}
  </div>

  <div class="tab-dropdown">
    <select id="tab-select">
      {tabs.map((tab, index) => (
        <option value={index} selected={index === 0}>
          <span class="dropdown-icon" set:html={icons[tab.icon as keyof typeof icons]}></span>
          {tab.name}
        </option>
      ))}
    </select>
  </div>

  <div class="code-container">
    {tabs.map((tab, index) => (
      <div class={`code-content ${index === 0 ? 'active' : ''}`} data-tab={index}>
        <ShikiHighlighter code={tab.code} lang={tab.lang} />
      </div>
    ))}
  </div>
</div>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    // Handle tab button clicks
    document.querySelectorAll('.tabbed-code-preview .tab').forEach((button) => {
      button.addEventListener('click', (event) => {
        const tabIndex = parseInt(button.dataset.tab || '0');
        const container = button.closest('.tabbed-code-preview');

        updateActiveTab(container, tabIndex);
        syncDropdown(container, tabIndex);
      });
    });

    // Handle dropdown changes
    document.querySelectorAll('.tabbed-code-preview #tab-select').forEach((select) => {
      select.addEventListener('change', (event) => {
        const tabIndex = parseInt(event.target.value);
        const container = select.closest('.tabbed-code-preview');

        updateActiveTab(container, tabIndex);
      });
    });
  });

  function updateActiveTab(container, tabIndex) {
    // Update tab buttons
    container?.querySelectorAll('.tab').forEach((tab, index) => {
      tab.classList.toggle('active', index === tabIndex);
    });

    // Update code content
    container?.querySelectorAll('.code-content').forEach((content, index) => {
      content.classList.toggle('active', index === tabIndex);
    });
  }

  function syncDropdown(container, tabIndex) {
    const select = container?.querySelector('#tab-select');
    if (select) {
      select.value = tabIndex.toString();
    }
  }
