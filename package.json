  },
  "devDependencies": {
    "@types/react": "^19.1.16",
    "react": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/juji/use-simple-debounce"
  },
  "bugs": {
